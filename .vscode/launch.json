   "version": "0.2.0",
   "configurations": [
      {
         "type": "node-terminal",
         "name": "yarn start",
         "request": "launch",
         "command": "yarn start",
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Attach to Chrome",
         "port": 9222,
         "request": "attach",
         "type": "chrome",
         "webRoot": "${workspaceFolder}"
      },
      {
         "name": "Launch Chrome",
         "request": "launch",
         "type": "chrome",
         "url": "http://localhost:4200",
         "webRoot": "${workspaceFolder}"
      },
      {
         "type": "node-terminal",
         "name": "Run Script: ng serve",
         "request": "launch",
         "command": "npm run ng",
         "cwd": "${workspaceFolder}"
      }
   ]
}